<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>
     <main class="container">
       <h1>New Wiki</h1>
       <form action="/wikis/create" method="post">
        <div class="form-group">
          <label for="title">Wiki title</label>
          <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
            <small class="text-muted" id="nameHelp">Title must be at least 5 characters</small>
        </div>
        <div class="form-group">
          <label for="body">Body</label>
          <textarea rows="4" class="form-control" name="body" placeholder="Enter Body"></textarea>
          <small class="text-muted" id="nameHelp">Body must be at least 10 characters</small>
                  <% if(currentUser && currentUser.role === 'premium') { %>
                    <div class="form-group">
                      <label for="private">Wiki Status</label>
                      <select class="form-control" name="private">
                        <option value="false">Public</option>
                        <option value="true">Private</option>
                      </select>
                    </div>
                  <% } %>
         <br>          
         <a href="/wikis" class="btn btn-primary">Cancel</a>
        <button type="submit" class="btn btn-success">Submit</button>
      </form>
     </main>
     <% include ../static/partials/baseScripts.ejs %>
   </body>
</html>
